@model SWD63AMovieUploader.Models.Movie

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Movie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form id="upload-form" asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateTimeUtc" class="control-label"></label>
                <input asp-for="DateTimeUtc" class="form-control" />
                <span asp-validation-for="DateTimeUtc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Thumbnail upload</label>
                <input type="file" name="thumbnailFile" class="form-control" />          
            </div>
            <div class="form-group">
                <label class="control-label">File upload</label>
                <input type = "file" name="movieFile" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <div class="progress">
                <div class="progress-bar" role="progressbar" style="width: 0%;" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">0%</div>
            </div>
        </form>

        @section Scripts {
            <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha384-vtXRMe3mGCbOeY7l30aIg8H9p3GdeSe4IFlP6G8JMa7o7lXvnz3GFKzPxzJdPfGK" crossorigin="anonymous"></script>
            <script>
                console.log(jQuery.fn.jquery);
                $(function () {
                    console.log(jQuery.fn.jquery)
                    $('#upload-form').submit(function (e) {
                        e.preventDefault();
                        var formData = new FormData(this);
                        $.ajax({
                            url: '/Movies/Create',
                            type: 'POST',
                            data: formData,
                            processData: false,
                            contentType: false,
                            xhr: function () {
                                var xhr = new XMLHttpRequest();
                                xhr.upload.addEventListener('progress', function (e) {
                                    if (e.lengthComputable) {
                                        var percent = Math.round((e.loaded / e.total) * 100);
                                        $('.progress-bar').css('width', percent + '%').text(percent + '%');
                                    }
                                });
                                return xhr;
                            },
                            success: function (data) {
                                alert("Movie uploaded successfully!");
                            },
                            error: function () {
                                alert("Faile to upload Movie!");
                            }
                        });
                    });
                });
            </script>
        }
        </div>
    </div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

